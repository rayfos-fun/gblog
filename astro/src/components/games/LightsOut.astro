---
import GameLayout from '@/layouts/GameLayout.astro';

interface Props {
  game: any;
  lang: string;
}

const { game, lang } = Astro.props;
const { i18n } = game.data;
---

<GameLayout title={game.data.title} lang={lang as any} bgmSrc={game.data.bgmSrc}>
    <div class="game-wrapper flex flex-col items-center gap-6 p-8 rounded-3xl bg-slate-50 dark:bg-slate-900 shadow-2xl border-4 border-slate-200 dark:border-slate-700 max-w-4xl mx-auto my-8" data-i18n={JSON.stringify(i18n)}>
        <!-- Stats Dashboard -->
        <div class="grid grid-cols-2 gap-4 w-full max-w-lg mb-4">
            <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm p-4 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-700 flex items-center gap-4">
                <div class="bg-blue-100 dark:bg-blue-900/30 p-3 rounded-xl">
                    <span class="text-2xl">ðŸ‘£</span>
                </div>
                <div>
                    <div class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400">{i18n.labels.moves}</div>
                    <div id="move-count" class="text-2xl font-mono font-bold text-slate-800 dark:text-slate-100">0</div>
                </div>
            </div>
            
            <button 
                id="restart-btn" 
                class="bg-blue-500 hover:bg-blue-600 active:bg-blue-700 text-white font-bold p-4 rounded-2xl shadow-lg transition-all flex items-center justify-center gap-2"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                {i18n.controls.restart}
            </button>
        </div>

        <div id="status-text" class="h-8 text-xl font-bold text-center text-slate-600 dark:text-slate-300 min-h-[2rem]">
            {i18n.messages.start}
        </div>

        <!-- Grid Board -->
        <div class="bg-slate-800 p-4 rounded-xl shadow-inner border-4 border-slate-700">
            <div id="board" class="grid grid-cols-5 gap-2 md:gap-3">
                <!-- Cells generated by JS -->
            </div>
        </div>
    </div>

    <script>
        import { LightsOutEngine } from '../../lib/LightsOutEngine';

        // DOM Elements
        const wrapper = document.querySelector('.game-wrapper');
        const boardEl = document.getElementById('board');
        const moveCountEl = document.getElementById('move-count');
        const statusEl = document.getElementById('status-text');
        const restartBtn = document.getElementById('restart-btn');

        // I18n
        const i18n = JSON.parse(wrapper.dataset.i18n || '{}');
        const messages = i18n.messages;

        // Audio Context
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        
        // Game State
        const game = new LightsOutEngine();

        // --- Audio Functions ---
        function playClickSound() {
            if (audioCtx.state === 'suspended') audioCtx.resume();
            
            const osc = audioCtx.createOscillator();
            const gainNode = audioCtx.createGain();
            
            osc.connect(gainNode);
            gainNode.connect(audioCtx.destination);
            
            const now = audioCtx.currentTime;
            
            // Mechanic click
            osc.type = 'square';
            osc.frequency.setValueAtTime(150, now);
            osc.frequency.exponentialRampToValueAtTime(40, now + 0.05);
            gainNode.gain.setValueAtTime(0.05, now);
            gainNode.gain.exponentialRampToValueAtTime(0.001, now + 0.05);
            
            osc.start(now);
            osc.stop(now + 0.05);
        }

        function playWinSound() {
             if (audioCtx.state === 'suspended') audioCtx.resume();
             
             const now = audioCtx.currentTime;
             const notes = [440, 554, 659, 880]; // A Major arpeggio
             
             notes.forEach((freq, i) => {
                 const osc = audioCtx.createOscillator();
                 const gain = audioCtx.createGain();
                 
                 osc.connect(gain);
                 gain.connect(audioCtx.destination);
                 
                 osc.type = 'sine';
                 osc.frequency.value = freq;
                 
                 const startTime = now + (i * 0.1);
                 
                 gain.gain.setValueAtTime(0, startTime);
                 gain.gain.linearRampToValueAtTime(0.1, startTime + 0.05);
                 gain.gain.exponentialRampToValueAtTime(0.001, startTime + 1.5);
                 
                 osc.start(startTime);
                 osc.stop(startTime + 1.5);
             });
        }

        // --- UI Functions ---
        function initGame() {
            game.init();
            render();
            updateStats();
            statusEl.textContent = messages.start || 'Turn off all lights!';
            statusEl.className = 'h-8 text-xl font-bold text-center text-slate-600 dark:text-slate-300 min-h-[2rem]';
        }

        function handleInput(index) {
            if (game.currentState.status !== 'PLAYING') return;

            game.attemptMove(index);
            playClickSound();
            
            render(); // Or optimize to partial update, but 5x5 is small enough
            updateStats();

            if (game.currentState.status === 'WON') {
                playWinSound();
                statusEl.textContent = messages.win || 'You Won!';
                statusEl.className = 'h-8 text-xl font-bold text-center text-green-500 min-h-[2rem] animate-bounce';
            }
        }

        function render() {
            boardEl.innerHTML = '';
            const grid = game.currentState.grid;
            
            grid.forEach((isOn, idx) => {
                const cell = document.createElement('button');
                // Base styles
                cell.className = `w-12 h-12 md:w-16 md:h-16 rounded-lg transition-all duration-200 border-2 shadow-lg ${
                    isOn 
                    ? 'bg-yellow-400 border-yellow-300 shadow-[0_0_15px_rgba(250,204,21,0.6)] hover:bg-yellow-300' 
                    : 'bg-slate-700 border-slate-600 shadow-inner hover:bg-slate-600'
                }`;
                
                cell.onclick = () => handleInput(idx);
                boardEl.appendChild(cell);
            });
        }

        function updateStats() {
            moveCountEl.textContent = game.currentState.moves;
        }

        restartBtn.onclick = initGame;

        // Start
        initGame();

    </script>
</GameLayout>
